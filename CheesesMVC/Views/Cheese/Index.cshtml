@model List<CheesesMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>;


@if (Model.Count == 0)
{
    <p>No Cheeses Yet!</p>
}

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
        <td>@cheese.Name</td>
        <td>@cheese.Description</td>
        </tr>
    }
</table>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>